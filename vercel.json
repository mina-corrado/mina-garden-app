{
    "public": false,
    "builds": [
        { "src": "package.json", "use": "@vercel/static-build" },
        { "src": "/api/index.js", "use": "@vercel/node" }
    ],
    "rewrites": [
        { "source": "/((?!(api|static)/.*).*)", "destination": "/" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api" },
        { "src": "^/static/(.*)", "dest": "/static/$1" }
    ]
}